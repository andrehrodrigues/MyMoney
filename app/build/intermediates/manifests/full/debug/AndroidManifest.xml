<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.saturno.android.mymoney"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/walleticon"
        android:label="@string/app_name"
        android:theme="@style/AppThemeLight" >
        <activity
            android:name="br.com.saturno.android.mymoney.Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.saturno.android.mymoney.Activities.CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name="br.com.saturno.android.mymoney.Activities.AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name="br.com.saturno.android.mymoney.Activities.ViewAllTransactionsActivity"
            android:label="@string/title_activity_view_all_transactions" >
        </activity>

        <receiver
            android:name="br.com.saturno.android.mymoney.SMSHandler.SMSHandlerBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" >
                </action>
            </intent-filter>
        </receiver>

        <activity
            android:name="br.com.saturno.android.mymoney.Activities.TransactionActivity"
            android:label="@string/title_activity_transaction" >
        </activity>
    </application>

</manifest>